<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/grey_background_pattern"
              android:padding="10dp"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:padding="1px"
                  android:background="@drawable/mapmenu_background"
            >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="1px"
                      android:id="@+id/liste_entete"
                >
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/liste_title"
                    android:paddingLeft="5px"
                    style="@style/myCalendarTitle"
                    />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5px"
                style="@style/myTextView"
                android:id="@+id/liste_descr"
                />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/myTextView"
                    android:id="@+id/type_donnee"
                    />
    </LinearLayout>
    <ListView android:id="@+id/liste_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:cacheColorHint="@android:color/white"
              android:drawSelectorOnTop="false"
              android:background="@android:color/white"
              android:divider="#AAAAAA"
              />
    </LinearLayout>
</LinearLayout>

